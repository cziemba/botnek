{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "inlineSourceMap": true,
    "target": "ESNext",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
